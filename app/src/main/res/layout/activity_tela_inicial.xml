<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaInicialLogada"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/corfundo">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/cabecalho_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logotit"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/logotitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="-37dp"
            android:contentDescription="logo" />

        <ImageButton
            android:id="@+id/buttonperfil"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/perfilamarelo"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitCenter"
            android:layout_marginStart="10dp"
            android:layout_marginTop="9dp"
            android:contentDescription="perfil"
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/butfaleconosco"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/suporte_branco"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="fale conosco" />

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            app:titleTextColor="?attr/colorOnSurfaceInverse"
            tools:ignore="MissingConstraints"
            android:visibility="gone"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="130dp"
            android:contentDescription="@string/txtSubTitulo"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layoutManager="com.google.android.material.carousel.CarouselLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/view" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_noticias"
            app:layout_constraintBottom_toTopOf="@id/recycler"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/azulescurov2"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recentes"
            android:textColor="@color/azulescurov2"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/recycler"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLink1"
            android:text="Noticia 1"
            android:textColor="@color/azulescurov2"
            app:layout_constraintTop_toBottomOf="@id/recycler"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="100dp"
            android:clickable="true"
            android:focusable="true"
            android:textSize="21dp"
            android:textStyle="italic"
            android:padding="10dp"
            android:textAlignment="center"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLink2"
            android:text="Noticia 2"
            android:textColor="@color/azulescurov2"
            app:layout_constraintTop_toBottomOf="@id/textViewLink1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="true"
            android:focusable="true"
            android:textSize="21dp"
            android:textStyle="italic"
            android:padding="10dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLink3"
            android:text="Noticia 3"
            android:textColor="@color/azulescurov2"
            app:layout_constraintTop_toBottomOf="@id/textViewLink2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="true"
            android:focusable="true"
            android:textSize="21dp"
            android:padding="10dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textViewLink4"
            android:layout_width="134dp"
            android:layout_height="52dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:text="Noticia 4"
            android:textAlignment="center"
            android:textColor="@color/azulescurov2"
            android:textSize="21dp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewLink3"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

